{
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hant": true
    },
    "security.workspace.trust.untrustedFiles": "open",
    "files.autoSave": "afterDelay",
    "workbench.iconTheme": "material-icon-theme",
    "background.enabled": true,
    "background.editor": {
        "useFront": true,
        "images": [
            "https://user-images.githubusercontent.com/9987486/40583669-d6189844-61c5-11e8-89e3-c52ad153da09.png",
            "https://user-images.githubusercontent.com/9987486/40583670-d6478c9e-61c5-11e8-9551-6b55eacc7b8d.png",
            "https://user-images.githubusercontent.com/9987486/40583671-d676c6e4-61c5-11e8-94cb-34ec4a12fa01.png"
        ],
        "interval": 0,
        "random": false
    },
    "workbench.colorTheme": "GitHub Dark",
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 13,
    "window.commandCenter": false,
    "[python]": {
        "editor.formatOnType": true
    },
    "cSpell.userWords": [
        "arctan",
        "blit",
        "etype",
        "excepthook",
        "hidpi",
        "laialaodi",
        "lxml",
        "manim",
        "qfluentwidgets",
        "startfile",
        "sympy",
        "tableview",
        "Uncreate",
        "Unwrite",
        "zhanghan"
    ],
    "window.autoDetectColorScheme": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": true,
    "[markdown]": {
        "editor.defaultFormatter": "mervin.markdown-formatter"
    },
    "editor.stickyScroll.enabled": false,
    "cmake.showOptionsMovedNotification": false,
    "workbench.preferredLightColorTheme": "GitHub Dark",
    "security.allowedUNCHosts": [
        "wsl.localhost"
    ],
    "update.mode": "none",
    "python.analysis.autoImportCompletions": true,
    "editor.smoothScrolling": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never", //在终端邮件粘贴时不警告
}
